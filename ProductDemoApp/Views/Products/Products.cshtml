@{
	ViewBag.Title = "Products";
}

<div class="jumbotron">
	<h1>Products</h1>
	<p class="lead">Here are our featured products. Click on an image to learn more. </p>
</div>

<div>
	<div id="products" class="row" infinite-scroll="loadProducts()" infinite-scroll-use-document-bottom="true">
		<div class="col-lg-3 col-md-4 col-sm-6 col-sm-offset-0 col-xs-offset-1 col-xs-10 text-center" ng-repeat="product in products">
			<h3>{{product.name}}</h3>
			<a ng-click="openProductModal($index)">
				<img ng-src={{product.image}} class="img-responsive img-rounded center-block" />
			</a>
			<h4>{{product.price}}</h4>
			<p>{{product.description}}</p>
		</div>
	</div>
</div>
